{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "allowJs": true,
    // "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    // "forceConsistentCasingInFileNames": true,
    // "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    // "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "baseUrl": "src",
